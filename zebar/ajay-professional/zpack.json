{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "ajay-glazewm-professional",
  "version": "1.0.0",
  "description": "Professional GlazeWM configuration with Zebar V2 bar featuring extensive functionality for workspaces, system information, and controls",
  "tags": ["professional", "system-integration", "glazewm"],
  "previewImages": [],
  "repositoryUrl": "https://github.com/Ajay-056/glazewm-config",
  "widgets": [
    {
      "name": "bar",
      "htmlPath": "./with-glazewm.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "**/**"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "42px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": true,
            "edge": "top",
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}